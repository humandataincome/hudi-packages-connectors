{
    "compilerOptions": {
        "target": "es2019",
        "experimentalDecorators": true,
        "module": "commonjs",
        "rootDir": "src",
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true
    },
    "include": [
        "src",
        "src/descriptor/*.json",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/generator",
    ]
}
